#!/bin/bash
#
# gnu command util.

#######################################
# write stderr syntax. google style(https://google.github.io/styleguide/shellguide.html)
# Globals:
#   LOGFORMAT
# Arguments:
#   All.
# Outputs:
#   format 
# Returns:
#   0 if thing was set alias, non-zero on error.
# Example:
#   err "Unable to do_something"  # => you use use sed
#######################################
function err() {
  local logformat=$LOGFORMAT
  if [ -z $logformat ]; then
    logformat="%Y-%m-%dT%H:%M:%S%z"
  fi
  echo "[ERROR $(date +"${logformat}")]: $*" >&2
}

function main {

  local i
  local new_array=( $@ )
  for ((i=0;i<$#;i++)); do
    # if find --debug flag from args, start debug mode.
    if [ "${new_array[$i]}" = "--debug" ]; then
      set -x
      trap "
        set +x
        trap - RETURN
      " RETURN
      unset new_array[$i]
    fi
  done
  # reindex assign.
  new_array=${new_array[@]}

  err $new_array
}

main $@
