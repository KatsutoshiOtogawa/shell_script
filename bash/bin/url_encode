#!/bin/bash
#
# gnu command util.

#######################################
# write stderr syntax. google style(https://google.github.io/styleguide/shellguide.html)
# Globals:
#   LOGFORMAT
# Arguments:
#   All.
# Outputs:
#   format 
# Returns:
#   0 if thing was set alias, non-zero on error.
# Example:
#   url_encode "Unable to do_something"  # => you use use sed
#######################################
function url_encode() {
  local sentense=$1

  if ! type "nkf" > /dev/null; then
    echo "nkf is not exists. install nkf!" >&2
    return 1
  fi

  echo $sentense | \
    nkf -WwMQ | \
    sed 's/=/%/g'
}

function main {

  local i
  local new_array=( $@ )
  for ((i=0;i<$#;i++)); do
    # if find --debug flag from args, start debug mode.
    if [ "${new_array[$i]}" = "--debug" ]; then
      set -x
      trap "
        set +x
        trap - RETURN
      " RETURN
      unset new_array[$i]
    fi
  done
  # reindex assign.
  new_array=${new_array[@]}

  url_encode $new_array
}

main $@
